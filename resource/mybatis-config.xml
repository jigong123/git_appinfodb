<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">


<configuration>
	<settings>
		<setting name="autoMappingBehavior" value="FULL"/>
	</settings>
	<!-- 给实体类，取别名 -->
 	<typeAliases>
 		<package name="entity"/>
 	</typeAliases>
    <!-- 配置数据连接信息 -->
	<environments default="development">
	<!-- 开发环境 -->
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://localhost:3306/appinfodb?characterEncoding=UTF-8" />
				<property name="username" value="root" />
				<property name="password" value="root" />
			</dataSource>
		</environment>
	</environments>
	<!-- SQL语句映射信息 -->
	<mappers>
	<mapper resource="dao/Login.xml"/>
	<mapper resource="dao/UserList.xml"/>
	<mapper resource="dao/RoleList.xml"/>
	<mapper resource="home/ProductDao.xml"/>
	<mapper resource="dao/BillList.xml"/>
	</mappers>
</configuration>